<?xml version="1.0"?>
<extension key="be.aivl.i3val" type="module">
  <file>i3val</file>
  <name>I3Val Input Validation</name>
  <description>Ilja's Initiative for Input Validation</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>SYSTOPIA</author>
    <email>endres@systopia.de</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/systopia/be.aivl.i3val</url>
    <url desc="Documentation">https://docs.civicrm.org/i3val/en/latest</url>
    <url desc="Support">https://github.com/systopia/be.aivl.i3val</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate/>
  <version>0.5-dev</version>
  <develStage>dev</develStage>
  <compatibility>
    <ver>5.38</ver>
  </compatibility>
  <comments>Funded by Amnesty International Vlaanderen</comments>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
    <psr0 prefix="CRM_" path="."/>
  </classloader>
  <civix>
    <namespace>CRM/I3val</namespace>
    <format>23.02.1</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
  </mixins>
  <upgrader>CRM_I3val_Upgrader</upgrader>
</extension>
